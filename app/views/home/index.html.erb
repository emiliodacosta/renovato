<h2>All Seeded Projects</h2>

  <% @projects.each do |project| %>
    <p>  Project ID: <%= project.id %> </p>

    <ul style="list-style: none">
      <li>Renovator  <%= project.renovator.firstName %> <%= project.renovator.lastName %></li>
      <li>Zip Code: <%= project.zipCode %></li>
      <li>Budget: $<%= project.budget %>0</li>
      <li>Needs:
        <% if project.intSvcs %>
        Interior Services
        <% end %>
        <% if project.archSvcs %>
        Architectural Services
        <% end %>
        <% if project.gcSvcs %>
        General Contractor Services
        <% end %>
    </ul>

    <% if project.matches.length<=0 %>

      <form action="<%= match_project_path(project) %>" method="post">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>%">
        <input type="submit" name="1match" value="Match Project <%= project.id %> with the nearest contractor">
      </form>
      <br>
      <form action="<%= match_project_path(project) %>" method="post">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>%">
        <input type="submit" name="nMatches" value="Match Project <%= project.id %> with the following number of contractors:">
        <input name="limit" type="number" value="2" min="2" max="10" step="1" required>
      </form>
    <% else %>
      <p> Contractor Matches </p>
      <ul style="list-style: none">
      <% project.contractors.each do |contractor| %>
            <li>Contractor ID: <%= contractor.id %></li>
            <li>Company Name: <%= contractor.companyName %></li>
            <li>Distance: </li>
      <% end %>
      </ul>
    <% end %>
    <br>
  <% end %>
